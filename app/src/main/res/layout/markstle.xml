<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:padding="24dp">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <include layout="@layout/layout_landing" />
        <include layout="@layout/layout_login" />
        <include layout="@layout/layout_signup" />
        <include layout="@layout/layout_forgot" />
        <include layout="@layout/layout_dashboard" />
        <include layout="@layout/layout_page_vip" />
        <include layout="@layout/layout_page_explore" />
        <include layout="@layout/layout_page_bookmark" />
        <include layout="@layout/layout_page_profile" />
        <include layout="@layout/layout_page_category" />
        <include layout="@layout/layout_page_recommendations" />
        <include layout="@layout/layout_page_popular" />
        <include layout="@layout/layout_page_detail" />

    </ViewFlipper>
</FrameLayout>
